{
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended",
    "@vue/prettier",
    "@vue/eslint-config-prettier",
    "@vue/typescript/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "camelcase": "off",
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "space-before-function-paren": 0,
    "vue/valid-v-slot": ["error", {
      "allowModifiers": true
    }]
  },
  "root": true
}